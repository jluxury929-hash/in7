    "trades": "tail -f logs/trades.log"
  },
  "dependencies": {
    "ethers": "^6.9.0",
    "@flashbots/ethers-provider-bundle": "^0.5.0",
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "winston": "^3.11.0",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.12.7",
    "@types/express": "^4.17.21",
    "ts-node": "^10.9.1"
  }
}

