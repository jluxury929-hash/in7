{
  "name": "massive-trading-engine-flashbots",
  "version": "1.0.0",
  "description": "A Flashbots-integrated MEV trading engine with Flash Loan Arbitrage Bot.",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm install",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "npm run build && npm start",
