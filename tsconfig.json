{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.js", 
    "mev_backend.js", 
    "src/**/*.js",
    "src/**/*.ts",
    "arbitrage-bot.ts"
  ],
  "exclude": ["node_modules", "dist", "logs"]
}
