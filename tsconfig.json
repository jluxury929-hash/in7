{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",      
    "outDir": "./dist",      
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"], 
  "exclude": ["node_modules", "dist"]
}
