{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,       /* <-- FIX: MUST be true to read .js utility files */
    "checkJs": true        /* <-- FIX: Recommended for safety */
  },
  "include": ["arbitrage-bot.ts", "src/**/*.ts", "src/**/*.js"], /* <-- Including .js files for completeness */
  "exclude": ["node_modules", "dist"]
}
